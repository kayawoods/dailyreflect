<!-- views/applications/show.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <title><%= entry.entry %></title>
</head>

<body>
  <%- include('../partials/_navbar.ejs') %>

  <div class="all-entrys-body">
    <div class="all-entrys-header">
      <h1>Your Entry</h1>
      <a class="add-entry-link" href="/users/<%= user._id %>/entrys/new">Add an Entry</a>
    </div>

  
    <div class="entries-container">
      <p><strong>Prompt:</strong> <%= entry.prompt.question %></p>
      <p><strong>Answer:</strong> <%= entry.entry %></p>

      <% if (entry.date) { %>
        <p><strong>Date:</strong> <%= new Date(entry.date).toISOString().split('T')[0] %></p>
      <% } %>

      <p><strong>Visibility:</strong> <%= entry.public ? "Public" : "Private" %></p>

      
      <div class="entry-actions">
        <a class="edit-link" href="/users/<%= user._id %>/entrys/<%= entry._id %>/edit">
          Edit this Entry
        </a>

        <form action="/users/<%= user._id %>/entrys/<%= entry._id %>?_method=DELETE" method="POST">
          <button type="submit" class="delete-button">Delete this Entry</button>
        </form>
      </div>
    </div>
  </div>

</body>
</html>
